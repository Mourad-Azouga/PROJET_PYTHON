# main.kv
#:kivy 2.0.0

<MainApp>:
    canvas:
        Color:
            rgba: 0.7, 0.7, 1, 1  # Light blue color
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        color:
                rgb: 1, 1, 1
        Label:
            text: "TIMEXI"
            font_size: 24
            color: 0, 0, 0, 1  # Black text color
            size_hint_x: None  # Disable horizontal size hint
            width: self.texture_size[0]  # Set width to the text width
            text_size: None, None # Reset text_size to allow manual width adjustment
